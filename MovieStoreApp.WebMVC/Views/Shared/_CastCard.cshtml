@model CastModel;

<div class="col-6 mb-4">
  <div class="card" style="width: 18rem;">
  <img src="@Model.ProfilePath" width="1px" height="300px" class="card-img-top" alt="...">
  <div class="card-body">
  <h5 class="card-title">@Model.Name</h5>

  @{if (@Model.Gender == 1)
  {
      <p class="card-text">Female</p>
  }
  else if (@Model.Gender==2){
      <p class="card-text">Male</p>
  }
  else{
      <p class="card-text">Other</p>
  }}

  <a target="_blank" asp-controller="cast" asp-action="detail" asp-route-castId="@Model.Id" class="btn btn-primary">Show Details</a>

  </div>
  </div>
  </div>
  <br />